{% extends 'base.html.twig' %}

{% block title %}Vacature bewerken - VAC!T{% endblock %}

{% block content %}
<div class="cell medium-1"></div>
<div class="cell medium-10 small-12">
  <form action="{{ path('edit_job', { 'id': job.id }) }}" method="post">
    <div class="grid-x">
      <div class="cell small-12">
        <label>Functie</label>
        <input type="text" name="title" value="{{job.title}}">
      </div>
      <div class="cell medium-3 small-12">
        <label>Niveau</label>
        <select name="level">
        {% for level in levels %}
          {% if level == job.level %}
            <option value="{{level.id}}" selected>{{level.level}}</option>
          {% else %}
            <option value="{{level.id}}">{{level.level}}</option>
          {% endif %}
        {% endfor %}
        </select>
      </div>
      <div class="cell second-in-row medium-9 small-12">
        <label>Plaats</label>
        <select name="city">
        {% for city in cities %}
          {% if city == job.city %}
            <option value="{{city.id}}" selected>{{city.name}}</option>
          {% else %}
            <option value="{{city.id}}">{{city.name}}</option>
          {% endif %}
        {% endfor %}
        </select>
      </div>
      <div class="cell small-12">
        <label>Omschrijving</label>
        <textarea name="description">{{job.description}}</textarea>
      </div>
      <div class="cell small-12 text-right">
        <button type="submit">
          <i class="fas fa-arrow-right"></i> Opslaan
        </button>
      </div>
    </div>
  </form>
</div>
<div class="cell small-1"></div>
{% endblock %}
