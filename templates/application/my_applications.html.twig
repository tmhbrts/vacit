{% extends 'base.html.twig' %}

{% block title %}
  Mijn sollicitaties | VAC!T
{% endblock %}

{% block content %}
  {% if applications is not empty %}
  <table id="my-applications" class="display" style="width:100%">
    <thead>
      <tr>
        <th>Datum</th>
        <th>Vacature</th>
        <th>Werkgever</th>
        <th>Uitgenodigd</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for application in applications %}
        <tr id="{{ application.id }}">
          <td>{{ application.date|date("d-m-Y") }}</td>
          <td>{{ application.job.title }}</td>
          <td>{{ application.job.employer.name }}</td>
          <td>{{ application.invitation|invitationStatus }}</td>
          <td>
            <button class="remove application">
              verwijder
            </button>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {% else %}
    <p>
      Je hebt nog geen sollicitaties gedaan.
    </p>
  {% endif %}
{% endblock %}
