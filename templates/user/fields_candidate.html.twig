 required<div class="cell medium-3 small-12">
  <label>voornaam</label>
  <input type="text" name="first_name" value="{{user.firstName}}" required>
</div>

<div class="cell second-in-row medium-9 small-12">
  <label>achternaam</label>
  <input type="text" name="name" value="{{user.name}}" required>
</div>

<div class="small-12">
  <label>email</label>
  <input type="text" name="email" value="{{user.email}}" required>
</div>

<div class="cell medium-4 small-12">
  <label>geboortedatum</label>
  <input type="date" name="date_of_birth" value="{{user.dateOfBirth|date('Y-m-d')}}" required>
</div>

<div class="cell second-in-row medium-8 small-12">
  <label>telefoonnummer</label>
  <input type="tel" name="phone_number" value="{{user.phoneNumber}}">
</div>

<div class="small-12">
  <label>adres</label>
  <input type="text" name="address" value="{{user.address}}" required>
</div>

<div class="cell medium-3 small-12">
  <label>postcode</label>
  <input type="text" name="postal_code" value="{{user.postalCode}}" required>
</div>

<div class="cell second-in-row medium-9 small-12">
  <label>woonplaats</label>
  <select name="city" required>
  {% for city in cities %}
    {% if city == user.city %}
    <option value="{{city.id}}" selected>{{city.name}}</option>
    {% else %}
    <option value="{{city.id}}">{{city.name}}</option>
    {% endif %}
  {% endfor %}
  </select>
</div>

<div class="cell small-12">
  <label>Motivatie</label>
  <textarea name="bio">{{user.bio}}</textarea>
</div>

<div class="cell small-6 text-left">
  <button id="upload-cv">
    <i class="fas fa-file-upload"></i> Upload CV
  </button>
  <div id="uploadMsg">
    {% if user.cvFilename is null %}
    Geen bestand ge√ºpload. (doc, docx, pdf, max. 5mb)
    {% else %}
    <strong>{{ user.cvFilename }} </strong>
    <a href="{{ asset('upload_files') }}/{{ user.cvFilename }}" target="_blank">
      (bekijk)
    </a>
    {% endif %}
  </div>
  <input id="input-cv" type="hidden" name="cv_filename" value="{{ user.cvFilename }}">
</div>

<div class="cell small-6 text-right">
  <button type="submit">
    <i class="fas fa-arrow-right"></i> Opslaan
  </button>
</div>
