<div class="small-12">
  <label>bedrijfsnaam</label>
  <input type="text" name="name" value="{{user.name}}">
</div>

<div class="small-12">
  <label>email</label>
  <input type="text" name="email" value="{{user.email}}">
</div>

<div class="small-12">
  <label>telefoonnummer</label>
  <input type="tel" name="phone_number" value="{{user.phoneNumber}}">
</div>

<div class="small-12">
  <label>adres</label>
  <input type="text" name="address" value="{{user.address}}">
</div>

<div class="cell medium-3 small-12">
  <label>postcode</label>
  <input type="text" name="postal_code" value="{{user.postalCode}}">
</div>

<div class="cell second-in-row medium-9 small-12">
<label>plaats</label>
  <select name="city">
  {% for city in cities %}
    {% if city == user.city %}
    <option value="{{city.id}}" selected>{{city.name}}</option>
    {% else %}
    <option value="{{city.id}}">{{city.name}}</option>
    {% endif %}
  {% endfor %}
  </select>
</div>

<div class="cell small-12">
  <label>Omschrijving</label>
  <textarea name="bio">{{user.bio}}</textarea>
</div>

<div class="cell small-12 text-right">
  <button type="submit">
    <i class="fas fa-arrow-right"></i> Opslaan
  </button>
</div>
